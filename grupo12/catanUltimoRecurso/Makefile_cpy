CC=gcc
CFLAGS=-Wall -Wextra -Wpedantic -std=c99 -g -Doff64_t=__off64_t
LDFLAGS=
LDLIBS=

PROGRAM=catanSimples
MAPA=Grelha

$(PROGRAM): $(PROGRAM).o $(MAPA).o catanSimples.o grelhaP.o player1.o abrirINI.o

$(PROGRAM).o: $(PROGRAM).c player1.h grelhaP.h abrirINI.h

$(MAPA).o: $(MAPA).c player1.h grelhaP.h abrirINI.h

Mapa.o: grelhaP.c abrirINI.c grelhaP.h

player1.o: player1.c player1.h

.PHONY: clean
clean:
	rm -f $(PROGRAM) *.o
